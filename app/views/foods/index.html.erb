<div class="foods-container flex-column">
  <h1>Food List</h1>
  <%= link_to new_food_path do %>
    <button class="add-btn">Add Food</button> 
  <% end %>
  <table>
    <thead>
      <tr>
        <td>Food</td>
        <td>Measurement unit</td>
        <td>Unit price</td>
        <td>Actions</td>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name%></td>
          <td><%= food.measurement_unit%></td>
          <td>$<%= food.price%></td>
          <td><%= button_to "Delete", food, method: :delete, class: "delete-btn", data: {turbo_confirm: "Are you sure?"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
