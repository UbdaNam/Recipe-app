<div class="form-container">
  <h2>Add New Food</h2>
  <%= form_with model: @food, class: "food_create_form" do |form|%>
    <% if @food.errors.any? %>
      <% @food.errors.full_messages.each do |message| %>
        <p><%= message %><p>
      <% end %>
    <% end %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :measurement_unit %>
      <%= form.text_field :measurement_unit%>
    </div>

    <div>
      <%= form.label :quantity %>
      <%= form.text_field :quantity %>
    </div>

    <div>
      <%= form.label :price %>
      <%= form.text_field :price %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>