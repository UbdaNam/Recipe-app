<div class="shopping-list-cont flex-column">
  <h1>Shopping List</h1>
  <div class="total-desc">
    <p>Amount of food items to buy: <%= @total_quantity %></p>
    <p>Total price of food needed: $<%= @total_price %></p>
  </div>
  <table>
    <thead>
      <tr>
        <td>Food</td>
        <td>Quantity</td>
        <td>Price</td>
      </tr>
    </thead>
    <tbody>
      <% @shopping_list.each do |food| %>
        <% if food.quantity < 0 %>
          <tr>
            <td><%= food.name %></td>
            <td><%= "#{food.quantity.abs} #{food.measurement_unit}" %></td>
            <td>$<%= food.price %></td>
          </tr>
        <% end %>
      <% end %> 
    </tbody>
  </table>
</div>
